@model GLMS.Website.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Html.RegisterBundle("jqueryval");
}

<section id="loginForm">
<p>
    Please enter your user name and password. @Html.ActionLink("Register", "Register") if you don't have an account.
</p>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <div class="editor-label">@Html.LabelFor(m => m.UserName)</div>
    <div class="editor-field">@Html.TextBoxFor(m => m.UserName)</div>
    <div class="editor-validation">@Html.ValidationMessageFor(m => m.UserName)</div>

    <div class="editor-label">@Html.LabelFor(m => m.Password)</div>
    <div class="editor-field">@Html.EditorFor(m => m.Password)</div>
    <div class="editor-validation">@Html.ValidationMessageFor(m => m.Password)</div>
    
    <div class='footer-tools'>
        <input name="button" type="submit" value="Log On" class="button" />
    </div>
}

